<!--								<option>javafx.graphics/com.sun.javafx.css=org.controlsfx.controls</option>-->
<!--							</options>-->
							<mainClass>${mainClassName}</mainClass>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>
